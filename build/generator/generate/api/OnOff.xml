<?xml version="1.1" encoding="UTF-8" ?>

<namespace name="onoff">

   <request name="TriggerState">
      <parameters>
         <parameter name="state" type="std::string" value="&quot;NoState&quot;"/>
         <parameter name="delay" type="std::size_t" value="0">
            <description>
               "Deley for starting triggering state transition"
            </description>
         </parameter>
      </parameters>
      <response>
         <parameters>
            <parameter name="result" type="bool" value="false"/>
         </parameters>
      </response>
   </request>

   <attribute name="CurrentState" type="std::string" notify="always">
      <description>
         "Attribute for notification about current state"
      </description>
   </attribute>

</namespace>
