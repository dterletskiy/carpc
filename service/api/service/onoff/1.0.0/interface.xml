<?xml version="1.1" encoding="UTF-8" ?>

<interface name="OnOff">

   <version major="1" minor="0" patch="0"/>
   <description/>

   <optionas name="ServiceOnOff" exported="true"/>

   <method type="request" name="trigger_state">
      <description>Request trigger new state</description>
      <response>trigger_state</response>
      <parameters>
         <parameter type="string" name="state">
            <description>Requested state</description>
         </parameter>
      </parameters>
   </method>

   <method type="response" name="trigger_state">
      <description>Respose for request trigger new state</description>
      <parameters>
         <parameter type="bool" name="result">
            <description>If trigger could be processed</description>
         </parameter>
      </parameters>
   </method>

   <attribute type="string" name="state" notify="on_change">
      <description>Current state</description>
   </attribute>

</interface>
